extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5.pt-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="")
            .col-md-7
                h1 #{viaje.titulo}
                p 
                    i.fas.fa-calendar-alt
                    |  Ida #{viaje.fecha_ida} - Vuelta #{viaje.fecha_vuelta}
                p 
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio}
                    
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles} Disponibles
                p #{viaje.descripcion}